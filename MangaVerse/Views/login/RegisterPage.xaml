<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MangaVerse.Views.RegisterPage"
             BackgroundColor="#191919">

    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="40">

        <Frame BorderColor="#87468b" CornerRadius="3" Padding="5" Margin="0,0,0,10" BackgroundColor="#191919">
        <Entry 
            Placeholder="Username" 
            Text="{Binding Name}"
            TextColor="White" />
        </Frame>

        <Frame BorderColor="#87468b" CornerRadius="3" Padding="5" Margin="0,0,0,10" BackgroundColor="#191919">
        <Entry 
            Placeholder="Email" 
            Text="{Binding Email}"
            TextColor="White" />
        </Frame>

        <Frame BorderColor="#87468b" CornerRadius="3" Padding="5" Margin="0,0,0,10" BackgroundColor="#191919">
        <Entry 
            Placeholder="ContraseÃ±a" 
            Text="{Binding Password}" 
            IsPassword="True"
            TextColor="White" />
        </Frame>
            <Button 
            Text="Registrarse" 
            Command="{Binding RegisterCommand}" 
            BackgroundColor="#a3c12b" 
            TextColor="White"
            Clicked="OnLoginClicked" />
            
        </StackLayout>
    </ContentPage.Content>

</ContentPage>